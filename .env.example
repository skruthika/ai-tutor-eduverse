# Enhanced Environment Configuration

# Groq API Configuration
API_KEY=your_groq_api_key_here
MODEL_NAME=llama3-70b-8192

# MongoDB Configuration
MONGO_URI=your_mongodb_connection_string_here
DATABASE_NAME=ai_tutor_enhanced

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Default Admin Configuration
DEFAULT_ADMIN_EMAIL=blackboxgenai@gmail.com

# Migration Configuration
RUN_MIGRATION=false

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Feature Flags
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_MESSAGE_ARCHIVING=true
ENABLE_ANALYTICS=true

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name

# Note: If AWS S3 credentials are not provided, file upload features will be disabled
# The application will still work without S3 configuration